<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.xwiki.notifications.filters.internal.DefaultNotificationFilterPreference"
         table="notifications_filters_preferences">
    <id name="filterPreferenceName" type="string" unsaved-value="undefined">
      <column name="nfp_name" length="255" not-null="true" />
      <generator class="assigned" />
    </id>
    <property name="user" type="string" column="nfp_user" index="NFP_USER"/>
    <property name="enabled" type="boolean" column="nfp_enabled" />
    <property name="active" type="boolean" column="nfp_active" />
    <property name="startingDate" type="timestamp" column="nfp_date" index="NFP_STARTING_DATE" />
    <property name="filterName" type="string" column="nfp_filter_name" length="255" index="NFP_FILTER_NAME" />
    <property name="filterType" type="integer" column="nfp_filter_type" />

    <set name="filterFormats" table="notifications_filters_preferences_format" lazy="false">
      <key column="filterPreferenceName" />
      <element column="format" type="integer" />
    </set>

    <map name="properties" table="notifications_filters_preferences_properties" lazy="false">
      <key column="filterPreferenceName"/>
      <index column="name" type="integer"/>
      <element column="value" type="string" length="2000"/>
    </map>
  </class>
</hibernate-mapping>